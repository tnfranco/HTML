package tnfranco13;

import java.util.Scanner;

public class IndicePoluicao {

	public static void main(String[] args) {
		// Variaveis
		float IndicePoluicao; 
		Scanner teclado = new Scanner(System.in);
		
		//Entradas
		System.out.println(" Digite o Indice: ");
		IndicePoluicao = teclado.nextFloat();
		
		//Processamento
		if (IndicePoluicao >= 0.3f && IndicePoluicao < 0.4f) {
		System.out.printf(" Grupo 1 suspender atividades");}
		
		else if (IndicePoluicao >= 0.4f && IndicePoluicao < 0.5f) {
			System.out.printf(" Grupo 1 e grupo 2 suspender atividades");}
		
		else if (IndicePoluicao >= 0.5f) {
			System.out.printf(" Todos os grupos suspender atividades");}
		
		else { 
			System.out.println(" Niveis aceitaveis");
		}
		
		// Saida
		
		teclado.close();
		}

}
